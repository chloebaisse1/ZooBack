<div class="container">
  <h1 class="mt-4">Cr√©ation d'un horaire</h1>

  {% for message in app.flashes('success') %}
  <div class="alert alert-success mt-4">
    {{ message }}
  </div>
  {% endfor %}

  {{ form_start(form) }}

  <div class="form-group">
    {{ form_label(form.Jour) }}
