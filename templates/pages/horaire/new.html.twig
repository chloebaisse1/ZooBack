{% extends "base.html.twig" %} {% block body %}

<div class="container">
  <h1 class="mt-4">Cr√©ation d'un horaire</h1>

  {% for message in app.flashes('success') %}
  <div class="alert alert-success mt-4">
    {{ message }}
  </div>
  {% endfor %}

  {{ form_start(form) }}

  <div class="form-group">
    {{ form_label(form.Jour) }}
    {{ form_widget(form.Jour) }}
    <div class="form-error">
      {{ form_errors(form.Jour) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.Heure_debut) }}
    {{ form_widget(form.Heure_debut) }}
    <div class="form-error">
      {{ form_errors(form.Heure_debut) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.Heure_fin) }}
    {{ form_widget(form.Heure_fin) }}
    <div class="form-error">
      {{ form_errors(form.Heure_fin) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_row(form.submit) }}
  </div>
</div>
{{ form_end(form) }}

{% endblock %}
